doctype html
head
  link(rel='stylesheet' href='../stylesheets/chatbox.css')
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css')
  script(type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.4.0/socket.io.min.js')
nav.navbar.navbar-expand-sm.bg-outline-sucess.sticky-top
  .navmenu.container-fluid
    a.navbar-brand(href='http://dungnguyenblue.com:3000/') ChatBox
    #mynavbar.collapse.navbar-collapse
      ul.navul.navbar-nav.me-auto
        li.nav-item
          a.nav-link(href='javascript:void(0)') Inbox
        li.nav-item
          a.nav-link(href='javascript:void(0)') Link
        li.nav-item
          a.nav-link(href='javascript:void(0)') Link
  .d-flex.menu-user
    input.btn.btn-success(type='button' value='Login' data-bs-toggle='modal' data-bs-target='#login')
    input.btn.btn-outline-success(type='button' value='Sign Up' data-bs-toggle='modal' data-bs-target='#signUp')
#frontpage.carousel.slide(data-bs-ride='carousel')
  .carousel-indicators
    button.active(type='button' data-bs-target='#frontpage' data-bs-slide-to='0')
    button(type='button' data-bs-target='#frontpage' data-bs-slide-to='1')
  .carousel-inner
    .carousel-item.active
      img.d-block.mx-auto(src='../images/home1.jpg')
      #carouselText.carousel-caption
        h3
          | Wellcome to 
          span
            | ChatBox
            span
        p Meet new people from around the world!
    .carousel-item
      img.d-block(src='../images/home2.jpg')
      .carousel-caption
        h3 Schedule
        p Manage your day with ease!
  button.carousel-control-prev(type='button' data-bs-target='#frontpage' data-bs-slide='prev')
    span.carousel-control-prev-icon
  button.carousel-control-next(type='button' data-bs-target='#frontpage' data-bs-slide='next')
    span.carousel-control-next-icon
.content.container-fluid
  .title
    h1 Products
  .row
    .card.col-sm
      img.card-img-top(src='../images/home1.jpg' alt='Card image')
      .card-body
        h4.card-title Inbox
        p.card-text Product information
        a.btn.btn-success(href='#') Learn more
    .card.col-sm
      img.card-img-top(src='../images/home1.jpg' alt='Card image')
      .card-body
        h4.card-title Schedual
        p.card-text Product information
        a.btn.btn-success(href='#') Learn more
div
  #login.container.mt-3.modal
    .modal-dialog
      .modal-content
        .modal-header
          h4.modal-title Login
          button.btn-close(type='button' data-bs-dismiss='modal')
        .modal-body
          form(action='/profile' method='post')
            .mb-3.mt-3
              label(for='username') Username:
              input#username.form-control(type='username' placeholder='Enter username' name='username')
            .mb-3
              label(for='pwd') Password:
              input#pwd.form-control(type='password' placeholder='Enter password' name='pswd')
            .form-check.mb-3
              label.form-check-label
                input.form-check-input(type='checkbox' name='remember')
                |  Remember me
            button#submit-login.btn.btn-success(type='submit' onclick='updateAvatar()') Submit
            button.btn.btn-danger(type='button' data-bs-dismiss='modal') Cancel
  #signUp.container.mt-3.modal
    .modal-dialog
      .modal-content
        .modal-header
          h4.modal-title Sign Up
          button.btn-close(type='button' data-bs-dismiss='modal')
        .modal-body
          form(action='/signup' method='post')
            label(for='name') Enter Name:
            .input-group.mb-3
              input#firstname.form-control(type='text' placeholder='First Name' name='firstname')
              input#lastname.form-control(type='text' placeholder='Last Name' name='lastname')
            .mb-3.mt-3
              label(for='email') Email:
              input#email.form-control(type='email' placeholder='Enter Email' name='email')
            .mb-3.mt-3
              label(for='username') Username:
              input#username.form-control(type='username' placeholder='Enter username' name='username')
            .mb-3
              label(for='pwd') Password:
              input#pwd.form-control(type='password' placeholder='Enter Password' name='pswd')
            button#submit-signup.btn.btn-success(type='submit') Submit
            button.btn.btn-danger(type='button' data-bs-dismiss='modal') Cancel
footer
  script(type='text/javascript' src='/javascripts/chatbox-client.js')
